    <artifactId>reactive_tracker_web_app</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>microservices</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>microservices</name>
  <description>microservices</description>
  <packaging>pom</packaging>

  <modules>
    <module>user_server</module>
    <module>record_server</module>
    <module>userDetails_server</module>
  </modules>

  <properties>
    <java.version>21</java.version>
    <jwt.token.version>0.11.5</jwt.token.version>
  </properties>


  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-r2dbc</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-security</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-webflux</artifactId>
